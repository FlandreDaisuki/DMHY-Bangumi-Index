{
    "eslint.autoFixOnSave": true,
    "editor.tabSize": 2,
    "[vue]": {
        "editor.formatOnSave": true
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        { "language": "vue", "autoFix": true },
        { "language": "html", "autoFix": true },
        { "language": "javascript", "autoFix": true }
    ],
    "cSpell.ignoreWords": [
        "jsyaml",
        "newold"
    ],
    "cSpell.words": [
        "bangumi"
    ]
}
