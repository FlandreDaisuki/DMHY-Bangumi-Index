{
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "editor.tabSize": 2,
    "eslint.validate": [
        "vue",
        "javascript",
        "javascriptreact"
    ],
    "cSpell.ignoreWords": [
        "isnew",
        "jsyaml",
        "newold"
    ],
    "cSpell.words": [
        "bangumi",
        "dmhy"
    ],
    "cSpell.ignorePaths": [
        "**/package-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/objects/**",
        ".vscode",
        "dist",
        "docs"
    ]
}
